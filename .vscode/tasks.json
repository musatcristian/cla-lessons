{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "BuildProject",
      "type": "shell",
      "command": "gcc",
      "args": ["-ggdb", "main.c", "-o", "bin/myapp", "-Iinclude", "src/**/*.c"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "C/C++: gcc build active file",
      "type": "cppbuild",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-Iinclude",
        "-lm"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
